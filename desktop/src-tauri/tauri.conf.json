{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "ARIA Desktop",
  "version": "0.5.5",
  "identifier": "com.aria.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ARIA Desktop",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "_csp_note": "CSP is intentionally null during alpha (v0.5.x). A strict policy will be enforced before stable release. See: https://tauri.app/reference/config/#securityconfig"
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/spmfrance-cloud/aria-protocol/releases/latest/download/latest.json"
      ],
      "pubkey": "",
      "_updater_note": "Updater signing is disabled (empty pubkey) during alpha (v0.5.x). A valid Ed25519 public key must be configured before any public release to ensure update authenticity."
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["aria"]
      }
    }
  }
}
